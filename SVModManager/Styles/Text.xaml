<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    
    
    <!-- Text Style-->
    <Style x:Key="BodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Statics/Fonts/lansui-Regular.ttf,FangSong"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <Style x:Key="UnderlineBodyTextStyle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Statics/Fonts/lansui-Regular.ttf,FangSong"/>
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="TextDecorations" Value="Underline"/>
        <Setter Property="TextDecorations">
            <Setter.Value>
                <TextDecorationCollection>
                    <TextDecoration PenOffset="3">
                        <TextDecoration.Pen>
                            <Pen Brush="#30FFFFFF" Thickness="1"/>
                        </TextDecoration.Pen>
                    </TextDecoration>
            </TextDecorationCollection>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="TitleTextStyle_1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Statics/Fonts/lansui-Bold.ttf,FangSong"/>
        <Setter Property="FontSize" Value="32"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style x:Key="TitleTextStyle_2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="/Statics/Fonts/lansui-Bold.ttf,/Statics/Fonts/FZXH.ttf,FangSong"/>
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

</ResourceDictionary>